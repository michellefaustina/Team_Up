<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <!-- Banner -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="83dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#4bb1ff">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/logo"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#4bb1ff">

                <!-- Banner Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:typeface="normal"
                    android:singleLine="false"
                    android:ellipsize="none"
                    android:layout_gravity="center"
                    android:text="CLASS TIME" />
            </LinearLayout>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:src="@mipmap/user_icon"
                android:id="@+id/userButton"
                android:background="#4bb1ff"
                android:tintMode="src_in"
                android:tint="#ffffff"/>

        </LinearLayout>
    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop"
            android:id="@+id/myTimeButton"
            android:src="@mipmap/clock_icon"
            android:background="#00000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Time"
            android:textColor="#7fc236" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/schedule_icon"
            android:background="#00000000"
            android:scaleType="centerCrop"
            android:id="@+id/availableTimeButton"
            android:layout_marginTop="50dp"
            android:tint="#88cc37" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Time"
            android:textColor="#7fc236" />
    </LinearLayout>
</LinearLayout>
